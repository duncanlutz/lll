
{.section item}

  <!--WRAPPER-->
  <div id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->
    <h1 class="name" data-content-field="name">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{name}</a>
      {.or}
        {name}
      {.end}
    </h1>

    <!--MAIN CONTENT-->
    {body}

    <!--BLOG INJECTION-->
    {postItemInjectCode}

    <!--SHARE AND LIKE-->
    {@|like-button}
    {@|social-button}

  </div>

{.end}